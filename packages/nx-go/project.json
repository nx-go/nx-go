{
  "name": "nx-go",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/nx-go/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/nx-go",
        "main": "packages/nx-go/src/index.ts",
        "tsConfig": "packages/nx-go/tsconfig.lib.json",
        "assets": [
          "LICENSE",
          "README.md",
          {
            "input": "./packages/nx-go/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/nx-go/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/nx-go",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/nx-go",
            "glob": "executors.json",
            "output": "."
          },
          {
            "input": "./packages/nx-go",
            "glob": "migrations.json",
            "output": "."
          }
        ]
      }
    },
    "test": {
      "configurations": {
        "ci": {
          "ci": true,
          "coverage": true
        }
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "postTargets": ["build", "deploy", "github"],
        "preset": "conventionalcommits",
        "push": true,
        "tagPrefix": "v"
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "{tag}",
        "notes": "{notes}"
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "distFolderPath": "dist/packages/nx-go"
      }
    }
  }
}
